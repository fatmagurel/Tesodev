@{
    ViewData["Title"] = "Siparişler";
}

<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1>Sipariş Onay-Red Paneli</h1>
                <div class="separator mb-5"></div>
                
                <div class="row list disable-text-selection">
                    @*@foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-12 col-sm-6 mr-4 mb-4" style="display:inline">
                <div class="card">
                    <div class="position-relative productPhoto">
                        <a data-path="@Url.Action("OrderConfirm", "Home", new { id = item.ID })" data-toggle="modal" data-target="#exampleModal" id="delete-item" class="btn btn-outline-primary delete-item" style="cursor:pointer;">Onayla</a>
                        <a data-path="@Url.Action("OrderDelete", "Home", new { id = item.ID })" data-toggle="modal" data-target="#exampleModal" id="delete-item" class="btn btn-outline-danger delete-item" style="cursor:pointer;">Reddet</a>
